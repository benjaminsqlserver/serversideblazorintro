{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "type": "template-form",
                  "name": "form0",
                  "components": [
                    {
                      "type": "row",
                      "style": {
                        "marginBottom": "1rem"
                      },
                      "components": [
                        {
                          "type": "col",
                          "class": "col-md-3",
                          "components": [
                            {
                              "type": "label",
                              "text": "Gender Name",
                              "component": "GenderName",
                              "name": "GenderNameLabel",
                              "style": {
                                "width": "100%"
                              }
                            }
                          ]
                        },
                        {
                          "type": "col",
                          "class": "col-md-9",
                          "components": [
                            {
                              "valueType": "string",
                              "maxLength": 50,
                              "type": "textbox",
                              "name": "GenderName",
                              "style": {
                                "display": "block",
                                "width": "100%"
                              },
                              "value": "${gender.GenderName}"
                            },
                            {
                              "type": "required-validator",
                              "name": "GenderNameRequiredValidator",
                              "component": "GenderName",
                              "text": "GenderName is required",
                              "style": {
                                "position": "absolute"
                              }
                            }
                          ]
                        }
                      ]
                    },
                    {
                      "type": "row",
                      "components": [
                        {
                          "type": "col",
                          "class": "col offset-sm-3",
                          "components": [
                            {
                              "type": "button",
                              "buttonType": "submit",
                              "icon": "save",
                              "text": "Save",
                              "buttonStyle": "primary"
                            },
                            {
                              "type": "button",
                              "buttonStyle": "light",
                              "text": "Cancel",
                              "events": {
                                "click": [
                                  {
                                    "type": "close-popup"
                                  }
                                ]
                              }
                            }
                          ]
                        }
                      ]
                    }
                  ],
                  "events": {
                    "submit": [
                      {
                        "error": [
                          {
                            "detail": "Unable to update Gender",
                            "severity": "error",
                            "summary": "Error",
                            "type": "notify"
                          }
                        ],
                        "name": "conData.updateGender",
                        "parameters": [
                          {
                            "name": "GenderID",
                            "value": "${parameters.GenderID}"
                          },
                          {
                            "name": "Gender",
                            "value": "${gender}"
                          }
                        ],
                        "then": [
                          {
                            "type": "close-popup",
                            "result": "${gender}"
                          }
                        ],
                        "type": "invoke"
                      }
                    ]
                  },
                  "itemType": "StudentRegApp.Models.ConData.Gender",
                  "data": "${gender}",
                  "visible": "${gender != null}"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "name": "conData.getGenderByGenderID",
        "parameters": [
          {
            "name": "GenderID",
            "value": "${parameters.GenderID}"
          }
        ],
        "then": [
          {
            "name": "gender",
            "type": "set",
            "value": "${result}",
            "valueType": "StudentRegApp.Models.ConData.Gender"
          }
        ],
        "error": [],
        "type": "invoke"
      }
    ]
  },
  "name": "Edit Gender",
  "layout": "Main",
  "access": [
    "Admin"
  ]
}